{
  "compilerOptions": {
    "outDir": "./dist/",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@types": ["./src/types.ts"],
      "@utils": ["./src/utils.ts"]
    },
    "module": "esnext",
    "lib": ["dom"],
    "moduleResolution": "node",
    "target": "ES2017",
    "jsx": "react-jsx",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  }
}
